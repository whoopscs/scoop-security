{
    "version": "1.6.0",
    "description": "httpx is a fast and multi-purpose HTTP toolkit that allows running multiple probes using the retryablehttp library. It is designed to maintain result reliability with an increased number of threads",
    "homepage": "https://github.com/projectdiscovery/httpx",
    "license": "MIT",
    "architecture": {
        "32bit": {
            "url": "https://github.com/projectdiscovery/httpx/releases/download/v1.6.0/httpx_1.6.0_windows_386.zip",
            "hash": "3c8ced48405946e0f97d07a0976396cd535bf5afc5ca4da27dc2a2abc83a0821"
        },
        "64bit": {
            "url": "https://github.com/projectdiscovery/httpx/releases/download/v1.6.0/httpx_1.6.0_windows_amd64.zip",
            "hash": "52c3721a905f04d88efd0c66321fe1b03c64182e55da0d7c0ddcb2f92f479bb6"
        }
    },
    "pre_install": [
        "$wsShell = New-Object -ComObject WScript.Shell",
        "$shortcut = $wsShell.CreateShortcut([System.IO.Path]::Combine($env:USERPROFILE, 'Desktop', 'httpx.lnk'))",
        "$shortcut.TargetPath = \"cmd.exe\"",
        "$shortcut.Arguments  = \"/K cd /d $dir\"",
        "$shortcut.IconLocation  = \"$bucketsdir\\security\\icon\\httpx.ico\"",
        "$shortcut.Save()",
    ],
    "pre_uninstall": [
        "$shortcutPath = [System.IO.Path]::Combine([System.Environment]::GetFolderPath(\"Desktop\"), \"httpx.lnk\")",
        "if (Test-Path $shortcutPath) { Remove-Item $shortcutPath -Force }",
	],
    "bin": "httpx.exe",
    "checkver": {
        "github": "https://github.com/projectdiscovery/httpx"
    },
    "autoupdate": {
        "architecture": {
            "32bit": {
                "url": "https://github.com/projectdiscovery/httpx/releases/download/v$version/httpx_$version_windows_386.zip"
            },
            "64bit": {
                "url": "https://github.com/projectdiscovery/httpx/releases/download/v$version/httpx_$version_windows_amd64.zip"
            }
        }
    }
}
